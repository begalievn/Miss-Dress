{
  "extends": ["react-app", "react-app/jest"],
  "rules": {
    "no-unused-vars": "error",
    "quotes": ["error", "single"],
    "indent": ["warn", 2],
    "semi": ["warn", "always"],
    "import/order": [
      "warn",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "object",
          "type"
        ],
        "newlines-between": "always-and-inside-groups"
      }
    ]
  }
}
